<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.pingo.mapper.MembershipMapper">

    <resultMap id="membershipResultMap" type="com.pingo.entity.membership.Membership">
        <id property="msNo" column="msNo" /> <result property="title" column="msName" />
        <result property="period" column="msDuration" />
        <result property="contents" column="description" />
        <result property="price" column="msPrice" />
    </resultMap>

    <select id="selectUserMembership" resultType="com.pingo.entity.membership.UserMembership">
        SELECT * FROM "userMembership"
        WHERE "userNo" = #{userNo}
        AND "expDate" >= CURRENT_DATE
    </select>

    <select id="selectMembership" resultMap="membershipResultMap">
        SELECT * FROM "membership"
        ORDER BY "msNo" ASC
    </select>

    <insert id="insertUserMembership" parameterType="com.pingo.entity.membership.UserMembership">
        INSERT INTO "userMembership" ("umNo", "userNo", "msNo", "payDate", "expDate", "state")
        VALUES (#{umNo}, #{userNo}, #{msNo}, #{payDate}, #{expDate}, #{state})
    </insert>
</mapper>